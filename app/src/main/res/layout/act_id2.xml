        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_alibuybutton"
                android:text="@string/BtnStr_Find"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_choose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_alibuybutton"
                android:text="@string/BtnStr_Choose"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/box_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是否获取指纹"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_read"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/bg_alibuybutton"
                android:text="@string/BtnStr_Read" />
            <ToggleButton
                android:id="@+id/button_startread"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textOn="@string/Btn_Stop"
                android:checked="false"
                android:textOff="@string/Btn_Repetition"
                android:background="@drawable/bg_alibuybutton"
                android:text="@string/BtnStr_Read" />

            <Button
                android:id="@+id/button_finger"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_alibuybutton"
                android:text="@string/BtnStr_Finger"
                android:visibility="gone" />
        </LinearLayout>

