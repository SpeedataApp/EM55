<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="80dp"
    android:layout_height="75dp"
   android:id="@+id/ly_id"
    android:background="@drawable/shape_border_selector"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/im_id"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/id"
        />

    <TextView
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="身份证"
        android:textSize="15dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/im_id" />

</LinearLayout>


    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ly_print"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_border_selector"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/im_print"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/print"
            />

        <TextView
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="打印机"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/im_print" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:id="@+id/ly_pasm"
        android:background="@drawable/shape_border_selector"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/im_pasm"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/id"
            />

        <TextView
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PASM卡"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/im_pasm" />

    </LinearLayout>
</LinearLayout>
